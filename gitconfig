[user]
	name = wedens
	email = wedens@eldis.ru
[core]
	autocrlf = false
	safecrlf = true
	editor = gvim -f
  excludesfile = ~/.gitignore
[push]
	default = current
[color]
  diff = auto
  status = auto
  branch = auto
  ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "status"]
  added = green
  changed = red
  untracked = yellow
[color "diff"]
  meta = blue bold reverse
  frag = magenta bold
  old = red bold
  new = green bold
[alias]
    f = fetch
    c = commit -m
    ps = push
    pl = pull
    co = checkout
    cl = clone
    ci = commit
    st = status
    br = branch
    f = fetch
    mom = merge origin/master
    rhh = reset --hard HEAD
    hist = log --pretty=format:\"%h %ad | %s%d [%an]\" --graph --oneline --decorate --all --date=short
    type = cat-file -t
    dump = cat-file -p
    ll = log --pretty=format:"%C(yellow)%h%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --numstat
    lds = log --pretty=format:"%C(yellow)%h\\ %ad%Cred%d\\ %Creset%s%Cblue\\ [%cn]" --decorate --date=short
    brdiff = log --left-right --graph --cherry-pick --oneline
    dl = "!git ll -1"
    assume = update-index --assume-unchanged
    unassume = update-index --no-assume-unchanged
    assumed = "!git ls-files -v | grep ^h | cut -c 3-"
